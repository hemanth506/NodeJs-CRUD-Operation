
  <html>
  <head>
    <title>Modal CRUD</title>
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"
    />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <style>
        .mt-10 {
            margin-top: 10 !important;
        }
        body {
          padding: 20px;
          font: 14px "Lucida Grande", Helvetica, Arial, sans-serif;
        }
        table {
          font-family: arial, sans-serif;
          border-collapse: collapse;
          width: 100%;
        }

        td, th {
          border: 1px solid #dddddd;
          text-align: left;
          padding: 8px;
        }

        tr:nth-child(even) {
          background-color: #dddddd;
        }

    </style>
  </head>
  <body>
    <div class="container  mt-10">
      <h2 class="text-center"><strong>CRUD Operation</strong></h2>
      <button type="button" class="btn btn-info" data-toggle="modal" data-target="#myModalNew">
        Add Details
      </button>

      <div class="modal fade" id="myModalNew" role="dialog" data-backdrop="static">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-body">
              <button type="button" class="close" data-dismiss="modal">&times;</button>
              <h3>Personal Details</h3>
              <form method="post" action='/'>
                  <div class="form-group">
                    <input type='text' class="form-control" name='firstname' id='firstname' placeholder="Firstname" required/>
                  </div>
                  <div class="form-group">
                    <input type='text' class="form-control" name='lastname' id='lastname' placeholder="Lastname" />
                  </div>
                  <div class="form-group">
                    <input type='email' class="form-control" name='email' id='email' placeholder="Email" required/>
                  </div>
                  <div class="form-group">
                    <input type='text' class="form-control" name='phnNumber' id='phnNumber' placeholder="Contact Number" required/>
                  </div>
                  <button class="btn btn-success" type='submit'>Submit</button>
              </form>
            </div>
          </div>
        </div>
      </div>
      
      {{#if message}}
      <h4 style="color: {{color}};">{{message}}</h4>
      {{/if}}

      <h3>{{title}}:</h3>
      
        <table>
          <tr>
            <th>Firstname</th>
            <th>Lastname</th>
            <th>Email</th>
            <th>Contact No</th>
            <th>Todo</th>
          </tr>
        {{#each allDatas}}
          <tr>
            <td>{{this.firstname}}</td>
            <td>{{this.lastname}}</td>
            <td>{{this.email}}</td>
            <td>{{this.phnNumber}}</td>
            <td><a href='/?id={{this._id}}' class="btn btn-danger btn-sm px-2">Delete</a> <a href="#" class="btn btn-warning btn-sm px-2" data-toggle="modal" data-target="#myModalNew">Update</a></td>
          </tr>
        {{/each}}
        </table>
      

    </div>
  </body>
</html>
